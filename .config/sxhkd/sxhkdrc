#
# APPS
#

# terminal emulator
super + Return
	$TERMINAL

super + shift + Return
    termite

# dropdown term
super + u
    ~/.config/bspwm/ddterm

# browser
super + w
    $BROWSER

super + shift + w
    qutebrowser

super + r
    rm -rf ~/.local/share/qutebrowser/webengine/Cookies* 2>/dev/null && qutebrowser :restart
# fzf
super + b
    alacritty --class floatterm -e ~/.scripts/fzfcmds/gotobm.sh

super + v
    alacritty --class floatterm -e ~/.scripts/fzfcmds/vimdir.sh
# program launcher
super + d
	exec rofi -lines 8 -padding 8 -width 16 -location 0 -show drun -sidebar-mode -columns 1 -font 'Noto Sans 10'

# file explorer
super + e
    alacritty --class vifm -e vifm
#
# BSPWM HOTKEYS
#

# make sxhkd reload its configuration files:
super + shift + c
	pkill -USR1 -x sxhkd

# rotate and even split
super + s
    bspc node @parent -R 90 && bspc node @parent/parent -B

# quit bspwm
super + shift + Escape
    bspc quit

# restart bspwm
# super + shift + r
	# bspc wm -r

#
# NODE
#

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# swap the current node and the biggest local node
super + space
	bspc node -s biggest.local

# send the newest marked node to the newest preselected node
super + m
	bspc node -s prev.local

# toggle fullscreen
super + f
    bspc node -t \~fullscreen

# toggle floating
super + shift + f
    if [ -z "$(bspc query -N -n focused.floating)" ]; then \
        bspc node focused -t floating; \
    else \
        bspc node focused -t tiled; \
    fi

# focus the node in the given direction
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# focus the last node/desktop
super + Tab
	bspc desktop -f last

# focus or send to the given desktop
super + {1-9,0}
	bspc desktop -f ^{1-9,10}

# send node to desktop and focus
super + shift + {1-9,0}
    id=$(bspc query -N -n); bspc node -d ^{1-9,0}; bspc node -f ${id}

