[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/bspwm]
type = internal/bspwm

enable-scroll = true
label-focused = %name%
label-focused-background =
label-focused-foreground = #b3555e
label-focused-underline = #bf616a
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty =
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

format-underline =
format-background =
format-padding =

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/time]
type = custom/script
exec = date '+%H:%M'
;click-left = $TERMINAL -e calcurse &
label = "%output%"
interval = 30

[module/battery]
type = internal/battery
full-at = 93
battery = BAT1
adapter = ADP1
poll-interval = 120
label-full = 
label-charging =  %percentage%%
label-discharging =  %percentage%%

[module/wireless-network]
type = internal/network
interface = wlp62s0
interval = 10
label-connected = 直 %signal%
label-disconnected = 睊

[module/alsa]
type = internal/alsa
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default
master-mixer = Master
mapped = true
interval = 36000
label-muted = 婢
label-volume = 墳 %percentage%%

[module/gpu]
type = custom/script
exec = optimus-manager --print-mode | sed '/^$/d' | cut -d':' -f2 | sed -e 's/^[[:space:]]//'
interval = 36000

[module/menu-apps]
type = custom/menu
; If true, <label-toggle> will be to the left of the menu items (default).
; If false, it will be on the right of all the items.
expand-right = true
menu-0-0 = Slack
menu-0-0-exec = slack &
menu-0-1 = AWS-WS
menu-0-1-exec = /opt/workspacesclient/workspacesclient &
label-open = Launcher
label-close = x
label-separator = " | "
